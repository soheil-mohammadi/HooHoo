<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="CustomSwitchStyle">
        <item name="colorControlActivated">@color/colorGreen</item>
    </style>

    <style name="CustomToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/back_round_bottom_sheet</item>
    </style>


    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <style name="NoTitleDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item> BNMSS M
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
        <item name="windowFixedHeightMajor">0%</item>
        <item name="windowFixedHeightMinor">00%</item>
    </style>


    <style name="TextAppearance.PhotoPicker.Button" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/isans</item>
        <item name="android:textColor">?pickerControlColor</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>


</resources>
