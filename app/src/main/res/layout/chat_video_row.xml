<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/container_video_row_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="start"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <info.abdolahi.CircularMusicProgressBar
        android:id="@+id/prg_video_play_row_chat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_video"
        app:border_color="#00796B"
        app:border_width="5dp"
        app:centercircle_diammterer="1"
        app:progress_color="#80CBC4"
        app:progress_startAngle="40"
        app:draw_anticlockwise="false"/>


    <RelativeLayout
        android:id="@+id/container_video_complete_row_chat"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:gravity="start"
        android:visibility="gone"
        android:padding="5dp">


        <ImageView
            android:id="@+id/img_video_complete_row_chat"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:padding="15dp"
            tools:src="@drawable/ic_char_4"
            android:alpha="0.7"
            />

        <ImageView
            android:id="@+id/img_video_complete_play_row_chat"
            android:layout_width="45dp"
            android:layout_centerInParent="true"
            android:layout_height="45dp"
            android:src="@drawable/ic_video"/>

        <Custom.CustomTextView
            android:id="@+id/txt_video_row_time_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:background="@drawable/back_container_dark"
            android:layout_alignParentBottom="true"
            tools:text="..."/>


    </RelativeLayout>



</LinearLayout>




