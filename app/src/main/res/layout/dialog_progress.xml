<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@drawable/back_dialog_corner"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_prg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Prg Title"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/isans_bold"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorAccent"
        />

    <ProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:indeterminate="true"
        android:layout_margin="3dp"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/txt_prg_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/isans"
        tools:text="Alert Title lert Title lert Titlelert Titlelert Titlelert Titlelert Titlelert Title"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        />



</LinearLayout>
